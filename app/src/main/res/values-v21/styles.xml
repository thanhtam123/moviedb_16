<resources>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="collapsedappbar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/color_white_text</item>
        <item name="colorControlNormal">@color/color_tolopea_primary</item>
        <item name="android:background">@color/color_tolopea_primary</item>
        <item name="colorAccent">@color/color_tolopea_primary</item>
        <item name="android:colorPrimary">@color/color_tolopea_primary</item>
        <item name="android:colorPrimaryDark">@color/color_tolopea_primary</item>
    </style>

    <style name="expandedappbar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">48sp</item>
        <item name="android:textColor">@color/color_white_text</item>
        <item name="android:textStyle">bold</item>
        <item name="colorAccent">@color/color_tolopea_primary</item>
        <item name="android:colorPrimary">@color/color_tolopea_primary</item>
        <item name="android:colorPrimaryDark">@color/color_tolopea_primary</item>
    </style>

</resources>
