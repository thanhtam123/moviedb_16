<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_item_movie"
    android:layout_width="@dimen/item_movie_width"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardElevation="3dp"
    app:cardCornerRadius="2dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="@color/colorPrimary">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:id="@+id/image_item_main_movie"
            android:src="@mipmap/ic_launcher_round"
            android:scaleType="fitXY"
            android:layout_height="@dimen/item_movie_img_avatar_height"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/item_movie_container_bottom_margin"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_item_name_movie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="@string/app_name"
                android:gravity="left"
                android:ellipsize="end"
                android:textColor="@color/white"
                android:textSize="@dimen/item_movie_title_text_size" />

            <RatingBar
                android:id="@+id/rating_item_movie"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/item_movie_rating_bar_margin_bottom"
                android:isIndicator="true"
                android:numStars="5"
                android:progressTint="@color/colorStar"
                android:secondaryProgressTint="@color/white"
                android:rating="4"
                android:scaleX=".8"
                android:scaleY=".8"
                android:stepSize="0.1"
                android:transformPivotX="@dimen/item_movie_rating_bar_transform_pivot_x"
                android:transformPivotY="@dimen/item_movie_rating_bar_transform_pivot_y" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>

