<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_search_height"
    android:layout_margin="@dimen/dp_8">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_jacarta_accent">

        <ImageView
            android:id="@+id/image_item_movie_poster"
            android:layout_width="@dimen/item_search_image_width"
            android:layout_height="@dimen/dp_0"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/ic_launcher_round" />

        <TextView
            android:id="@+id/text_item_movie_title_search"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/text_item_movie_title_search"
            android:layout_marginBottom="@dimen/dp_8"
            android:layout_marginEnd="@dimen/dp_8"
            android:layout_marginStart="@dimen/dp_8"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/app_name"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/color_white_text"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/text_item_movie_genre_search"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/image_item_movie_poster" />

        <TextView
            android:id="@+id/text_item_movie_genre_search"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_8"
            android:layout_marginEnd="@dimen/dp_8"
            android:layout_marginStart="@dimen/dp_8"
            android:alpha="0.7"
            android:text="@string/app_name"
            android:textColor="@color/color_orange_peel_star"
            app:layout_constraintBottom_toTopOf="@+id/rating_item_movie_search"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/image_item_movie_poster" />

        <RatingBar
            android:id="@+id/rating_item_movie_search"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/rating_search_item"
            android:layout_marginBottom="@dimen/dp_8"
            android:layout_marginStart="@dimen/dp_8"
            android:numStars="5"
            android:progressTint="@color/color_orange_peel_star"
            android:rating="4.5"
            android:scaleX=".9"
            android:scaleY=".9"
            android:secondaryProgressTint="@color/color_white_text"
            android:stepSize="0.1"
            android:transformPivotX="@dimen/item_movie_rating_bar_transform_pivot_x"
            android:transformPivotY="@dimen/item_movie_rating_bar_transform_pivot_y"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/image_item_movie_poster" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
